<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mail_detail_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mail Subject"
        android:textStyle="bold"
        android:textSize="15sp"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_subject"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mail_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_subject" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mail_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        app:layout_constraintEnd_toEndOf="@+id/mail_from"
        app:layout_constraintTop_toBottomOf="@+id/mail_from" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sender_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="sender@mail.com"
        app:layout_constraintStart_toEndOf="@id/mail_from"
        app:layout_constraintTop_toBottomOf="@+id/guideline_subject" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/receiver_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reciever@mail.com"
        app:layout_constraintStart_toStartOf="@+id/sender_id"
        app:layout_constraintTop_toBottomOf="@+id/sender_id" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_from_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="80dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="35dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mail_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_from_to"
        android:text="Mail Body"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mail_body"
        android:layout_margin="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reply_to_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reply to all"
        android:layout_margin="5dp"
        app:layout_constraintStart_toEndOf="@id/reply_button"
        app:layout_constraintTop_toBottomOf="@id/mail_body" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forward_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forward"
        android:layout_margin="5dp"
        app:layout_constraintStart_toEndOf="@id/reply_to_all_button"
        app:layout_constraintTop_toBottomOf="@id/mail_body" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/more_options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Options"
        android:layout_margin="5dp"
        app:layout_constraintStart_toEndOf="@id/forward_button"
        app:layout_constraintTop_toBottomOf="@id/mail_body" />

</androidx.constraintlayout.widget.ConstraintLayout>